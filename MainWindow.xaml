<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLauncher"
        mc:Ignorable="d"
        Title="Game Launcher" Height="650" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="20" Background="#1A1E31" Margin="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar with Tools -->
            <Border Grid.Column="0" Background="#12152A" CornerRadius="20,0,0,20">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="3" 
                     BlurRadius="8" 
                     Direction="270" 
                     Color="#CCCCCC" 
                     Opacity="0.2"
                     RenderingBias="Quality"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Game Icon -->
                        <RowDefinition Height="*"/>
                        <!-- UniformGrid (Tool Icons) -->
                        <RowDefinition Height="Auto"/>
                        <!-- Settings Button -->
                    </Grid.RowDefinitions>

                    <!-- Game Icon with Dropdown -->
                    <Border Height="70" Width="70" VerticalAlignment="Top" Grid.Row="0">
                        <Button Background="Transparent" Padding="10" BorderBrush="{x:Null}" Margin="10,10,10,10">
                            <Path Data="M21,16.5C21,16.88 20.79,17.21 20.47,17.38L12.57,21.82C12.41,21.94 12.21,22 12,22C11.79,22 11.59,21.94 11.43,21.82L3.53,17.38C3.21,17.21 3,16.88 3,16.5V7.5C3,7.12 3.21,6.79 3.53,6.62L11.43,2.18C11.59,2.06 11.79,2 12,2C12.21,2 12.41,2.06 12.57,2.18L20.47,6.62C20.79,6.79 21,7.12 21,7.5V16.5M12,4.15L6.04,7.5L12,10.85L17.96,7.5L12,4.15M5,15.91L11,19.29V12.58L5,9.21V15.91M19,15.91V9.21L13,12.58V19.29L19,15.91Z" Fill="White" Stretch="Uniform"/>
                        </Button>
                    </Border>

                    <!-- Tool Icons -->
                    <UniformGrid Margin="0,30,0,0" Height="329" Width="70" Rows="5" Grid.Row="1">
                        <UniformGrid.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="0,0,0,20"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Height" Value="40"/>
                                <Setter Property="Width" Value="40"/>
                            </Style>
                        </UniformGrid.Resources>

                        <!-- Home Button -->
                        <Button BorderBrush="{x:Null}" Height="35" Width="35">
                            <Path Data="M12,3L2,12H5V20H19V12H22L12,3M12,8.75A2.25,2.25 0 0,1 14.25,11A2.25,2.25 0 0,1 12,13.25A2.25,2.25 0 0,1 9.75,11A2.25,2.25 0 0,1 12,8.75Z" 
                      Fill="White" Stretch="Uniform"/>
                        </Button>

                        <!-- Links Button -->
                        <Button BorderBrush="{x:Null}" Width="35" Height="35">
                            <Path Data="M3.9,12C3.9,10.29 5.29,8.9 7,8.9H11V7H7A5,5 0 0,0 2,12A5,5 0 0,0 7,17H11V15.1H7C5.29,15.1 3.9,13.71 3.9,12M8,13H16V11H8V13M17,7H13V8.9H17C18.71,8.9 20.1,10.29 20.1,12C20.1,13.71 18.71,15.1 17,15.1H13V17H17A5,5 0 0,0 22,12A5,5 0 0,0 17,7Z" 
                      Fill="White" Stretch="Uniform"/>
                        </Button>

                        <!-- Images/Gallery Button -->
                        <Button BorderBrush="{x:Null}" Width="35" Height="31">
                            <Path Data="M22,16V4A2,2 0 0,0 20,2H8A2,2 0 0,0 6,4V16A2,2 0 0,0 8,18H20A2,2 0 0,0 22,16M11,15L9.5,13.5L7,16H17L13.5,11.5L11,15M4,22H20V20H4V6H2V20A2,2 0 0,0 4,22Z" 
                      Fill="White" Stretch="Uniform"/>
                        </Button>

                        <!-- Tools Button -->
                        <Button BorderBrush="{x:Null}" Width="35" Height="35">
                            <Path Data="M22.7,19L13.6,9.9C14.5,7.6 14,4.9 12.1,3C10.1,1 7.1,0.6 4.7,1.7L9,6L6,9L1.6,4.7C0.4,7.1 0.9,10.1 2.9,12.1C4.8,14 7.5,14.5 9.8,13.6L18.9,22.7C19.3,23.1 19.9,23.1 20.3,22.7L22.6,20.4C23.1,20 23.1,19.3 22.7,19Z" 
                      Fill="White" Stretch="Uniform"/>
                        </Button>

                        <!-- Store/Download Button -->
                        <Button BorderBrush="{x:Null}" IsCancel="True" Width="35" Height="35">
                            <Path Data="M5,20H19V18H5M19,9H15V3H9V9H5L12,16L19,9Z" 
                      Fill="White" Stretch="Uniform"/>
                        </Button>
                    </UniformGrid>

                    <!-- Settings Button at Bottom -->
                    <Button Height="35" Width="35" Background="Transparent" Margin="0,100,0,20" BorderBrush="{x:Null}" Grid.Row="2">
                        <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 15.03,5.46L14.64,2.87C14.59,2.62 14.38,2.44 14.13,2.44H10.36C10.11,2.44 9.89,2.62 9.84,2.87L9.45,5.46C8.97,5.68 8.53,5.95 8.12,6.29L5.72,5.35C5.5,5.26 5.23,5.33 5.12,5.55L3.2,8.87C3.09,9.07 3.14,9.34 3.32,9.48L5.34,11.06C5.3,11.36 5.28,11.68 5.28,12C5.28,12.33 5.3,12.64 5.34,12.94L3.32,14.52C3.14,14.66 3.09,14.93 3.2,15.13L5.12,18.45C5.23,18.67 5.5,18.74 5.72,18.65L8.12,17.71C8.53,18.05 8.97,18.32 9.45,18.54L9.84,21.13C9.89,21.38 10.11,21.56 10.36,21.56H14.13C14.38,21.56 14.59,21.38 14.64,21.13L15.03,18.54C15.5,18.32 15.94,18.05 16.36,17.71L18.76,18.65C18.97,18.74 19.24,18.67 19.36,18.45L21.28,15.13C21.39,14.93 21.34,14.66 21.16,14.52L19.14,12.94Z" 
                  Fill="White" Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="160"/>
                </Grid.RowDefinitions>

                <!-- Top Game Banner and Information -->
                <Grid Grid.Row="0" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="244*"/>
                    </Grid.RowDefinitions>
                    <!-- Large Background Game Image -->
                    <Border Grid.RowSpan="2" CornerRadius="0,20,20,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="3" 
                                BlurRadius="8" 
                                Direction="270" 
                                Color="#CCCCCC" 
                                Opacity="0.2"
                                RenderingBias="Quality"/>
                        </Border.Effect>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#1E2246" Offset="0"/>
                                <GradientStop Color="#382C5C" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Width="287" Margin="590,540,0,0" Height="54">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Time Played Display as a Button -->
                            <Button Grid.Column="0" Background="#3A3E5A" 
                                BorderThickness="0" Padding="15,0" Width="110" BorderBrush="{x:Null}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="25">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                      Fill="White" Width="16" Height="16" Margin="0,0,10,0"/>
                                    <TextBlock Text="0h 0m" Foreground="White" VerticalAlignment="Center" Width="38"/>
                                </StackPanel>
                            </Button>

                            <!-- Start Game Button -->
                            <Button Grid.Column="1" Background="#5C4D9D" 
                            BorderThickness="0" BorderBrush="{x:Null}" Margin="24,0,-172,0">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Color="#3A3E5A" Opacity="0.5"/>
                                </Button.Effect>
                                <TextBlock Text="Start Game" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                            </Button>

                        </Grid>
                    </Border>

                    <!-- Game Title and Characters -->
                    <Grid VerticalAlignment="Top" Grid.Row="1" Height="72" Margin="21,3,460,0">
                        <!-- Game Logo/Title -->
                        <TextBlock Text="Game Title" FontSize="34" Foreground="White" 
                               FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,10"
                               FontFamily="Microsoft YaHei UI" Width="405">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="Black" Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>

                    <!-- Banner Controls -->
                    <Border Height="40" Background="#3A3E5A" VerticalAlignment="Top"
                        HorizontalAlignment="Left" Margin="150,288,0,0" Width="200" 
                        CornerRadius="20" Opacity="0.85" Grid.Row="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Special Event Available" VerticalAlignment="Center" Foreground="White" 
                                   FontSize="14" Margin="10,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Bottom Game Information Panel -->

                <!-- Start Game Button and Time -->

                <!-- Window Title Bar - Draggable Area -->
                <Border Grid.Column="1" Height="39" VerticalAlignment="Top" Background="Transparent" 
                MouseDown="TitleBar_MouseDown" HorizontalAlignment="Stretch">
                </Border>

                <!-- Window Controls -->
                <UniformGrid Rows="1" Columns="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Width="136" Height="39" Panel.ZIndex="1">
                    <!-- Minimize Button -->
                    <Button Width="24" Height="24" Background="Transparent" Click="MinimizeButton_Click" BorderBrush="{x:Null}">
                        <Path Data="M3,14H21V16H3V14Z" Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                    </Button>

                    <!-- Maximize/Restore Button -->
                    <Button Width="24" Height="24" Background="Transparent" Click="MaximizeRestoreButton_Click" BorderBrush="{x:Null}">
                        <Path x:Name="MaximizeIcon" Data="M3,3H21V21H3V3M5,5V19H19V5H5Z" Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                    </Button>

                    <!-- Close Button -->
                    <Button Width="24" Height="24" Background="Transparent" Click="CloseButton_Click" BorderBrush="{x:Null}">
                        <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                          Fill="White" Stretch="Uniform" Width="16" Height="16"/>
                    </Button>
                </UniformGrid>
            </Grid>
        </Grid>
    </Border>
</Window>